{
    "name": "lartrix/lartrix",
    "description": "Laravel 后台管理包，为 trix 前端提供 API 接口",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lartrix",
            "email": "lartrix@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "laravel/sanctum": "^3.3|^4.0",
        "spatie/laravel-permission": "^6.0",
        "nwidart/laravel-modules": "^10.0|^11.0",
        "maatwebsite/excel": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "giorgiosironi/eris": "^1.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Lartrix\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Lartrix\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "build-assets": [
            "@php -r \"if (PHP_OS_FAMILY === 'Windows') { passthru('powershell -ExecutionPolicy Bypass -File scripts/build-assets.ps1'); } else { passthru('bash scripts/build-assets.sh'); }\""
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lartrix\\LartrixServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
